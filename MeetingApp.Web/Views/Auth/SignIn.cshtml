@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center center-screen">
    @using (Html.BeginForm("SignIn", "Auth", FormMethod.Post))
    {
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Логин" />
            <input type="text" class="form-control" name="password" placeholder="Пароль" />
        </div>
        <div class="form-group">
            <button name="action" value="login" class="btn btn-primary">Войти</button>
            <button name="action" value="register" class="btn btn-primary">Зарегистрироваться</button>
        </div>
    }
</div>
