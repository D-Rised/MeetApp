@using MeetingApp.DAL.Models;
@using MeetingApp.Web.Controllers;
@model CreateEditDatesViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <h1 class="display-3">Meeting panel</h1>
    </div>
    <div class="row">
        <a class="btn btn-light" asp-controller="Auth" asp-action="LogOut">Log Out</a>
        <h2 class="display-5"></h2>
    </div>
</div>

<div class="container">
    <div class="col-2"></div>
    <div class="col-6">

        <div class="col-xs-12" style="height:50px;"></div>

        <div class="row">
            <h4>Meeting settings</h4>
        </div>
        <div class="col-xs-12" style="height:10px;"></div>

        <div class="col-xs-12" style="height:10px;"></div>
        @using (Html.BeginForm("CreateMeeting", "Meeting", FormMethod.Post))
        {
            <div class="row">
                <div class="form-group">
                    <label>Meeting name:</label>
                    <input asp-for="@Model.title" type="text" class="form-control" value="@Model.title" />
                </div>
            </div>

            <div class="col-xs-12" style="height:10px;"></div>

            <div class="row">
                <table id="myTable" class=" table order-list">
                    <thead>
                        <tr>
                            <td>Date start</td>
                            <td>Date end</td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.DatesList.Count; i++)
                        {
                            <tr>
                                <td class="col-sm-4">
                                    <div class='input-group date' id='datepicker_start_@i'>
                                        <input asp-for="@Model.DatesList[i].dateStart" type="datetime" class="form-control" value="@Model.DatesList[i].dateStart" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </td>
                                <td class="col-sm-4">
                                    <div class='input-group date' id='datepicker_end_@i'>
                                        <input asp-for="@Model.DatesList[i].dateEnd" type="datetime" class="form-control" value="@Model.DatesList[i].dateEnd" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </td>
                                @if (i > 0)
                                {
                                    <td class="col-sm-2">
                                        <button name="action" value="@i" class="btn btn-warning">Remove date</button>
                                    </td>
                                }
                                else
                                {
                                    <td class="col-sm-2">
                                        <a class="deleteRow"></a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" style="text-align: left;">
                                <button name="action" value="add row" class="btn btn-light">Add row</button>
                            </td>
                        </tr>
                        <tr>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="col-xs-12" style="height:50px;"></div>

            <div class="row">
                <div class="form-group pl-2">
                    <button name="action" value="create meeting" class="btn btn-light">Create</button>
                </div>
            </div>
        }
    </div>
    <div class="col-4"></div>
</div>



@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/Eonasdan/tempus-dominus@v6-alpha1/dist/js/tempus-dominus.js" crossorigin="anonymous"></script>

    <!-- Tempus Dominus Styles -->
    <link href="https://cdn.jsdelivr.net/gh/Eonasdan/tempus-dominus@v6-alpha1/dist/css/tempus-dominus.css" rel="stylesheet" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">

    <script>
        for (var i = 0; i < @Model.DatesList.Count; i++) {
            $('#datepicker_start_' + i).datetimepicker();
            $('#datepicker_end_' + i).datetimepicker();
        }
    </script>
}
