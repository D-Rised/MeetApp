@using MeetApp.Web.Controllers;
@model CreateMeetViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <h1 class="display-3">Create new meet:</h1>
    </div>
</div>

<div class="container">
    <div class="col-2"></div>
    <div class="col-10">

        <div class="col-xs-12" style="height:50px;"></div>

        <div class="row">
            <h4>Meet settings</h4>
        </div>
        <div class="col-xs-12" style="height:10px;"></div>

        <div class="col-xs-12" style="height:10px;"></div>
        @using (Html.BeginForm("CreateMeet", "Meet", FormMethod.Post))
        {
            <div class="row">
                <div class="form-group">
                    <label>Meet name:</label>
                    <input asp-for="@Model.title" type="text" class="form-control" value="@Model.title" />
                </div>
            </div>

            <div class="col-xs-12" style="height:10px;"></div>

            <div class="row">
                <div class="form-group">
                    <label>Fixed date: </label>
                    <input type="checkbox" asp-for="@Model.fixedDate" class="form-group" id="fixedDateCheckbox" />
                    <label></label>
                </div>
            </div>

            <div class="col-xs-12" style="height:10px;"></div>

            <div class="row">
                <table id="myTable" class=" table order-list">
                    <thead>
                        <tr>
                            <td>Date start</td>
                            <td>Date end</td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.DatesList.Count; i++)
                        {
                            <tr>
                                <td class="col-sm-4">
                                    <div class='input-group date'>
                                        <input asp-for="@Model.DatesList[i].dateStart" type="datetime" class="form-control" value="@Model.DatesList[i].dateStart" />
                                        <span class="input-group-text bi bi-calendar2"></span>
                                    </div>
                                </td>
                                <td class="col-sm-4">
                                    <div class='input-group date'>
                                        <input asp-for="@Model.DatesList[i].dateEnd" type="datetime" class="form-control" value="@Model.DatesList[i].dateEnd" />
                                        <span class="input-group-text bi bi-calendar2"></span>
                                    </div>
                                </td>
                                @if (i > 0)
                                {
                                    <td class="col-sm-2">
                                        <button name="action" value="@i" class="btn btn-warning">Remove date</button>
                                    </td>
                                }
                                else
                                {
                                    <td class="col-sm-2">
                                        <a class="deleteRow"></a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" style="text-align: left;">
                                <button name="action" value="add row" class="btn btn-light">Add row</button>
                            </td>
                        </tr>
                        <tr>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="row">
                <div class="form-group pl-2">
                    <button name="action" value="create meet" class="btn btn-light">Create meet</button>
                </div>
            </div>

            <div class="col-xs-12" style="height:50px;"></div>

            <div class="row">
                <a asp-controller="Meet" asp-action="MainMenu" class="btn btn-warning">Back to main menu</a>
            </div>
        }
    </div>
    @if (Model.alertMessage != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@Model.alertMessage");
            };
        </script>
    }
</div>
