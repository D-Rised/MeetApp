@using MeetApp.Web.Controllers;
@model AuthViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center center-screen">
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
        <div class="form-group">
            <input asp-for="@Model.Login" type="text" class="form-control" value="@Model.Login" placeholder="Login" />
            <input asp-for="@Model.Password" type="text" class="form-control" value="@Model.Password" placeholder="Password" />
        </div>
        <div class="form-group">
            <button asp-controller="Auth" asp-action="Login" class="btn btn-light">Login</button>
            <button asp-controller="Auth" asp-action="Register" class="btn btn-light">Register</button>
        </div>
    }

    @if (Model.alertMessage != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@Model.alertMessage");
            };
        </script>
    }
</div>
