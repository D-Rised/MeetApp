@using MeetApp.Web.Controllers;
@model SetupMeetViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <h1 class="display-3">Meet settings</h1>
    </div>
</div>

<div class="container">
    <div class="col-2"></div>
    <div class="col-6">

        <div class="col-xs-12" style="height:50px;"></div>

        <div class="row">
            <h4>Meet state: @Model.state</h4>
        </div>
        <div class="col-xs-12" style="height:10px;"></div>

        <div class="col-xs-12" style="height:10px;"></div>
        @using (Html.BeginForm("SetupMeet", "Meet", FormMethod.Post))
        {
            <div class="row">
                <div class="form-group">
                    <label>Meet name:</label>
                    <input asp-for="@Model.title" type="text" class="form-control" value="@Model.title" />
                </div>
            </div>

            <div class="col-xs-12" style="height:10px;"></div>

            <div class="row">
                <div class="form-group">
                    <label>Meet invite key:</label>
                    <p class="form-control input-group-text text-black-50">@Model.meetId</p>
                </div>
            </div>

            <div class="col-xs-12" style="height:10px;"></div>

            <div class="row">
                <table id="datesTable" class=" table order-list">
                    <thead>
                        <tr>
                            <td>Date start</td>
                            <td>Date end</td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.DatesList.Count; i++)
                        {
                            <tr>
                                <td class="col-sm-4">
                                    <div class='input-group date' id='datepicker_start_@i'>
                                        <input asp-for="@Model.DatesList[i].dateStart" type="datetime" class="form-control" readonly="readonly" value="@Model.DatesList[i].dateStart" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </td>
                                <td class="col-sm-4">
                                    <div class='input-group date' id='datepicker_end_@i'>
                                        <input asp-for="@Model.DatesList[i].dateEnd" type="datetime" class="form-control" readonly="readonly" value="@Model.DatesList[i].dateEnd" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-xs-12" style="height:50px;"></div>

            <div class="row">
                <table id="membersTable" class=" table order-list">
                    <thead>
                        <tr>
                            <td>Member name</td>
                            <td>Member role</td>
                            <td>State</td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.MembersList.Count; i++)
                        {
                            <tr>
                                <td class="col-sm-4">
                                    <input asp-for="@Model.MembersList[i].login" type="datetime" class="form-control" readonly="readonly" value="@Model.MembersList[i].login" />
                                </td>
                                <td class="col-sm-4">
                                    <input asp-for="@Model.MembersList[i].role" type="datetime" class="form-control" readonly="readonly" value="@Model.MembersList[i].role" />
                                </td>
                                <td class="col-sm-4">
                                    <input asp-for="@Model.MembersList[i].state" type="datetime" class="form-control" readonly="readonly" value="@Model.MembersList[i].state" />
                                </td>
                                @if (i > 0)
                                {
                                    <td class="col-sm-2">
                                        <button asp-controller="Meet" asp-action="SetupMeet" asp-route-meetId="@Model.meetId" asp-route-memberId="@i" asp-route-decision="kick member" class="btn btn-warning">Kick</button>
                                    </td>
                                }
                                else
                                {
                                    <td class="col-sm-2">
                                        <a class="deleteRow"></a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-xs-12" style="height:50px;"></div>

            <div class="row">
                <div class="form-group pl-2">
                    <button asp-controller="Meet" asp-action="SetupMeet" asp-route-meetId="@Model.meetId" asp-route-decision="update meet" class="btn btn-light">Update</button>
                </div>
                <div class="form-group pl-2">
                    <button asp-controller="Meet" asp-action="SetupMeet" asp-route-meetId="@Model.meetId" asp-route-decision="calculate meet" class="btn btn-light">Calculate</button>
                </div>
                <div class="form-group pl-2">
                    <button asp-controller="Meet" asp-action="SetupMeet" asp-route-meetId="@Model.meetId" asp-route-decision="delete meet" class="btn btn-warning">Delete</button>
                </div>
            </div>

            <div class="col-xs-12" style="height:50px;"></div>

            <div class="row">
                <a asp-controller="Meet" asp-action="MainMenu" class="btn btn-warning">Back to main menu</a>
            </div>
        }
    </div>
    <div class="col-4"></div>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
</div>



@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/Eonasdan/tempus-dominus@v6-alpha1/dist/js/tempus-dominus.js" crossorigin="anonymous"></script>

    <!-- Tempus Dominus Styles -->
    <link href="https://cdn.jsdelivr.net/gh/Eonasdan/tempus-dominus@v6-alpha1/dist/css/tempus-dominus.css" rel="stylesheet" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">

    <script>
        for (var i = 0; i < @Model.DatesList.Count; i++) {
            $('#datepicker_start_' + i).datetimepicker();
            $('#datepicker_end_' + i).datetimepicker();
        }
    </script>
}
