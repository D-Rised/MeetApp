@using MeetApp.Web.Controllers;
@model AuthViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center center-screen">
    @using (Html.BeginForm("SignIn", "Auth", FormMethod.Post))
    {
        <div class="form-group">
            <input type="text" class="form-control" name="login" placeholder="Login" />
            <input type="text" class="form-control" name="password" placeholder="Password" />
        </div>
        <div class="form-group">
            <button name="action" value="login" class="btn btn-light">Login</button>
            <button name="action" value="register" class="btn btn-light">Register</button>
        </div>
    }

    @if (Model.alertMessage != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@Model.alertMessage");
            };
        </script>
    }
</div>
